<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.example.yang_.yangzhang_project.HomeActivity">


    <ImageView
        android:id="@+id/under5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:adjustViewBounds="true"
        android:maxHeight="130dp"
        android:maxWidth="160dp"
        android:scaleType="fitCenter"
        android:src="@drawable/under5" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/under5"
        android:layout_alignRight="@+id/under5"
        android:layout_below="@+id/under5"
        android:gravity="center"
        android:text="5-Minute Recipes"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/explore"
        android:layout_alignRight="@+id/explore"
        android:layout_below="@+id/explore"
        android:gravity="center"
        android:text="Online Recipes"
        android:textColor="#000000" />


    <ImageView
        android:id="@+id/under10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView6"
        android:layout_alignTop="@+id/under5"
        android:layout_marginLeft="180dp"
        android:adjustViewBounds="true"
        android:maxHeight="130dp"
        android:maxWidth="160dp"
        android:scaleType="fitCenter"
        android:src="@drawable/under10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/under10"
        android:layout_alignRight="@+id/under10"
        android:layout_below="@+id/under10"
        android:gravity="center"
        android:text="10-Minute Recipes"
        android:textColor="#000000" />

    <ImageView
        android:id="@+id/under15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/under5"
        android:layout_marginTop="40dp"
        android:adjustViewBounds="true"
        android:maxHeight="120dp"
        android:maxWidth="160dp"
        android:scaleType="fitCenter"
        android:src="@drawable/under15" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/under15"
        android:layout_alignRight="@+id/under15"
        android:layout_below="@+id/under15"
        android:gravity="center"
        android:text="15-Minute Recipes"
        android:textColor="#000000" />

    <ImageView
        android:id="@+id/explore"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView10"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/add"
        android:layout_toStartOf="@+id/add"
        android:adjustViewBounds="true"
        android:gravity="center"
        android:src="@drawable/more" />

    <ImageView
        android:id="@+id/viewAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView7"
        android:layout_below="@id/under10"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="40dp"
        android:adjustViewBounds="true"
        android:maxHeight="120dp"
        android:maxWidth="160dp"
        android:scaleType="centerCrop"
        android:src="@drawable/all" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/viewAll"
        android:layout_alignRight="@+id/viewAll"
        android:layout_below="@+id/under15"
        android:gravity="center"
        android:text="View All Recipes"
        android:textColor="#000000" />


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_above="@+id/textView8"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:src="@drawable/thermometer" />

    <TextView
        android:id="@+id/tempView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_marginBottom="14dp"
        android:layout_toEndOf="@+id/imageView3"
        android:layout_toRightOf="@+id/imageView3"
        android:gravity="center"
        android:text="temp"
        android:textColor="#FF0f00"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/add"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/plus" />

    <ImageView
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="99dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/banner" />


</RelativeLayout>
